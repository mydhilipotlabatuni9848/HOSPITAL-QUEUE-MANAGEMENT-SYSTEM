#include <stdio.h>
#define MAX 50

int queue[MAX];
int front = -1, rear = -1;

void enqueue(int patient) {
    if (rear == MAX - 1) {
        printf("Queue is Full! No more patients can be added.\n");
    } else {
        if (front == -1) 
            front = 0;
        rear++;
        queue[rear] = patient;
        printf("Patient %d added to the queue.\n", patient);
    }
}

void dequeue() {
    if (front == -1 || front > rear) {
        printf("No patients in the queue.\n");
    } else {
        printf("Patient %d is served and removed from the queue.\n", queue[front]);
        front++;
    }
}

void display() {
    if (front == -1 || front > rear) {
        printf("Queue is empty.\n");
    } else {
        printf("Patients waiting in the queue: ");
        for (int i = front; i <= rear; i++)
            printf("%d ", queue[i]);
        printf("\n");
    }
}

int main() {
    int choice, patient;

    while (1) {
        printf("\n--- Hospital Queue System ---\n");
        printf("1. Add Patient (Enqueue)\n");
        printf("2. Serve Patient (Dequeue)\n");
        printf("3. Display Queue\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter patient ID to add: ");
                scanf("%d", &patient);
                enqueue(patient);
                break;

            case 2:
                dequeue();
                break;

            case 3:
                display();
                break;

            case 4:
                return 0;

            default:
                printf("Invalid choice! Try again.\n");
        }
    }
}
